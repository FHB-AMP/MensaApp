<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MensaApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:valueConverter="using:MensaApp.Converter"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="MensaApp.SettingPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <valueConverter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <CollectionViewSource x:Name="nutrition"/>
        <CollectionViewSource x:Name="additives"/>
        <CollectionViewSource x:Name="allergenes"/>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
			<TransitionCollection>
				<EntranceThemeTransition/>
			</TransitionCollection>
		</Grid.ChildrenTransitions>

		<!-- Pivot -->
		<Pivot Margin="-8,0,0,0" Title="FH Brandenburg Mensa" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
<!-- First PivotItem -->
<!--<PivotItem Margin="18,0,10,0" Padding="2,0" Header="Ernährung">
                <Grid/>
            </PivotItem>-->
<!-- Secound PivotItem -->
			<PivotItem Margin="18,0,10,0" Padding="2,0" Header="Zusatzstoffe">
				<ListView ItemsSource="{Binding Source={StaticResource additives}}" SelectionMode="None">
					<ListView.ItemContainerStyle>
						<Style TargetType="ListViewItem">
							<Setter Property="HorizontalContentAlignment" Value="Stretch"/>
							<Setter Property="Margin" Value="8,0,8,12"/>
						</Style>
					</ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="70"/>
                                    <RowDefinition MinHeight="0" Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="{ThemeResource ListViewItemOverlayBackgroundThemeBrush}" 
								                   Grid.Column="0" Height="Auto" RadiusX="5" RadiusY="5" Stroke="White" StrokeThickness="0" Grid.ColumnSpan="3"/>
                                <Rectangle Fill="{ThemeResource ListViewItemOverlayBackgroundThemeBrush}" Grid.RowSpan="2" Grid.ColumnSpan="3" 
								                Grid.Column="0" Height="Auto" RadiusX="5" RadiusY="5" Stroke="White" StrokeThickness="0" Margin="0"/>
                                <TextBlock Text="{Binding Path=Definition}" TextWrapping="WrapWholeWords" Grid.Column="1" Grid.Row="0" Grid.RowSpan="1" 
								                Margin="10,0" FontSize="20" MaxLines="2" TextTrimming="WordEllipsis" VerticalAlignment="Center" Padding="0,0,0,4"/>
                                <TextBlock Text="{Binding Path=Meaning}" TextWrapping="WrapWholeWords" Grid.Row="1" Grid.RowSpan="1" 
								                 Visibility="{Binding Path=ShowMeaning, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="10" FontSize="16" MaxLines="5" TextTrimming="WordEllipsis" Grid.ColumnSpan="3"/>
                                <ToggleSwitch IsOn="{Binding Path=IsExcluded}" Header="" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                                                Grid.Column="2" Grid.Row="0" OffContent="" OnContent="" Margin="0,0,8,6" Padding="0"/>
                                <Button Content="+" Command="{Binding ToggleShowMeaningCommand}" CommandParameter="{Binding}" BorderThickness="0" HorizontalAlignment="Center" Padding="0" MinWidth="40" MinHeight="70"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
			</PivotItem>
			<!-- Third PivotItem -->
			<PivotItem  Margin="18,0,10,0" Padding="2,0"  Header="Allergene">
				<Grid/>
			</PivotItem>
		</Pivot>
	</Grid>
</Page>
