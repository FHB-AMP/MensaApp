<Page
    x:Class="MensaApp.MealsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MensaApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    Background="{ThemeResource PhoneBackgroundBrush}" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" UseLayoutRounding="True">
    <UserControl.Resources>
        <CollectionViewSource x:Name="mealsToday" IsSourceGrouped="True" ItemsPath="Meals"/>
        <CollectionViewSource x:Name="mealsForecast" IsSourceGrouped="True" ItemsPath="Meals"/>
    </UserControl.Resources>
    <Page.BottomAppBar>
		<CommandBar>
			<AppBarButton Icon="Refresh" Label="neu laden"/>
			<AppBarButton Icon="Setting" Label="Einstellung"/>
		</CommandBar>
	</Page.BottomAppBar>

    <Grid x:Name="LayoutRoot" Margin="12,0">
<!-- Pivot -->        
        <Pivot HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.ColumnSpan="2" Grid.Row="0" Margin="-20,0,0,0" Title="FH Brandenburg Mensa">

<!-- First PivotItem -->
            <PivotItem Margin="18,0,0,0" Padding="2,0" FontSize="8" Header="Heute">
                <Grid x:Name="ContentGridToday" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="57.5"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="TodayListView" ItemsSource="{Binding Source={StaticResource mealsToday}}" 
                              Margin="0,0,0,0" Grid.ColumnSpan="2" Header="" Grid.Row="0" FontSize="24" Grid.RowSpan="2" SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,12"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="100">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="33"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Fill="{ThemeResource ListViewItemOverlayBackgroundThemeBrush}" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0" StrokeThickness="0" Grid.Column="1" Height="Auto"/>
                                    <Rectangle Fill="#FF6AA84F" Grid.RowSpan="3" Stroke="Black" Margin="0" StrokeThickness="0"/>
                                    <TextBlock TextWrapping="WrapWholeWords" Text="{Binding Name}" Grid.Column="1" Grid.RowSpan="3" 
    								        Margin="10" FontSize="16" MaxLines="3" TextTrimming="WordEllipsis"/>
                                    <Ellipse Fill="#FFD1D1D1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Grid.Column="2" Margin="0"/>
                                    <Ellipse Fill="#FFD1D1D1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Grid.Column="2" Margin="0" Grid.Row="1"/>
                                    <Ellipse Fill="#FFD1D1D1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Grid.Column="2" Margin="0" Grid.Row="2"/>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Path=MealNumber}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-19,0,0,0" MaxLines="1" Width="66" Height="25" FontSize="13.333" Grid.ColumnSpan="2" Grid.Row="1">
                                        <TextBlock.RenderTransform>
                                            <CompositeTransform Rotation="-90"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True">
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid IsHitTestVisible="False">
                                            <TextBlock Text="{Binding Path=Date}" FontSize="22" Margin="0,0,0,12" FontFamily="Segoe WP" HorizontalAlignment="Left"/>
                                        </Grid>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>
                    </ListView>
                </Grid>
            </PivotItem>
            
<!-- Second PivotItem -->
            <PivotItem Margin="18,0,0,0" Padding="2,0" Header="Vorschau">
                <Grid x:Name="ContentGridForcast" Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="57.5"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <ListView x:Name="ForecastDaysListView" ItemsSource="{Binding Source={StaticResource mealsForecast}}" 
                              Margin="0,0,0,0" Grid.ColumnSpan="2" Header="" Grid.Row="0" FontSize="24" Grid.RowSpan="2" SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,12"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Height="100">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="33"/>
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Fill="{ThemeResource ListViewItemOverlayBackgroundThemeBrush}" Grid.RowSpan="3" Grid.ColumnSpan="2" Margin="0" StrokeThickness="0" Grid.Column="1" Height="Auto"/>
                                    <Rectangle Fill="#FF6AA84F" Grid.RowSpan="3" Stroke="Black" Margin="0" StrokeThickness="0"/>
                                    <TextBlock TextWrapping="WrapWholeWords" Text="{Binding Name}" Grid.Column="1" Grid.RowSpan="3" 
    								        Margin="10" FontSize="16" MaxLines="3" TextTrimming="WordEllipsis"/>
                                    <Ellipse Fill="#FFD1D1D1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Grid.Column="2" Margin="0"/>
                                    <Ellipse Fill="#FFD1D1D1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Grid.Column="2" Margin="0" Grid.Row="1"/>
                                    <Ellipse Fill="#FFD1D1D1" HorizontalAlignment="Center" Height="18" VerticalAlignment="Center" Width="18" Grid.Column="2" Margin="0" Grid.Row="2"/>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Path=MealNumber}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-19,0,0,0" MaxLines="1" Width="66" Height="25" FontSize="13.333" Grid.ColumnSpan="2" Grid.Row="1">
                                        <TextBlock.RenderTransform>
                                            <CompositeTransform Rotation="-90"/>
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.GroupStyle>
                            <GroupStyle HidesIfEmpty="True">
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <Grid IsHitTestVisible="False">
                                            <TextBlock Text="{Binding Path=Date}" FontSize="22" Margin="0,4,0,12" FontFamily="Segoe WP" HorizontalAlignment="Left"/>
                                        </Grid>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>
                    </ListView>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
